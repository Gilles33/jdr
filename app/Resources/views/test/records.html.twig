{% extends 'base.html.twig' %}

{% block body %}
    <h3>Historique des actions</h3>

    {% for result in results %}
        <div class="row">
            <div class="col s4 center-align">
                {% if app.user.charactername != result.initiator %}
                <p>Attaquant : {{ result.initiator }}</p>
                    {% endif %}
            </div>
            <div class="col s4 center-align">
                {% if app.user.charactername != result.defendant %}
                <p>Cible : {{ result.defendant }}</p>
                    {% endif %}
            </div>
            <div class="col s4 center-align">
                <p>Résultat : {% if app.user == result.winner %}Victoire{% else %}Défaite{% endif %}</p>
            </div>
        </div>
    {% endfor %}

{% endblock %}