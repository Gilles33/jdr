{% extends 'base.html.twig' %}

{% block body %}
    <div class="container showCharacter">
        <h3>Ajouter une discipline Ã  {{ character.username }}</h3>
        {{ form_start(form) }}
        <div class="row">
            <div class="col s6 l2 offset-l1">
                {{ form_row(form.discipline) }}
            </div>
            <div class="col s6 l2">
                {{ form_row(form.value) }}
            </div>
        </div>
        <div class="row center">
            <div class="col s12 l4">
                {{ form_row(form.save, {'attr' : {'class' : 'finalButton'}}) }}
                {{ form_end(form) }}
            </div>
            <div class="col s12 l4">
                <a href="{{ path('show_character', {'character' : character.id }) }}"
                   class="waves-effect waves-light btn waves-red finalButton">Afficher</a>
            </div>
            <div class="col s12 l4">
                <a href="{{ path('character_list') }}"
                   class="waves-effect waves-light btn waves-red finalButton">Liste</a>
            </div>

        </div>


        <h3>Liste des disciplines</h3>
        <div class="row">
            <div class="col s12 l3">
                <table class="highlight">
                    <thead>
                    <tr>
                        <th>Discipline</th>
                        <th>Valeur</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for discipline in character.disciplines %}
                        <tr>
                            <td>{{ discipline.discipline.name }}</td>
                            <td>{{ discipline.value }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}